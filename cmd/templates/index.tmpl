<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Linux VJ System">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>ikascrew</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.blue_grey-green.min.css">
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>

    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">

      <div class="ikascrew-header mdl-layout__header mdl-layout__header--waterfall">
        <div class="mdl-layout__header-row">
          <span class="ikascrew-mobile-title mdl-layout-title">
            <img src="images/logo.png">
          </span>
        </div>
      </div>

      <div class="ikascrew-drawer mdl-layout__drawer">
        <nav class="mdl-navigation">

          <div class="ikascrew-drawer-separator">Controller</div>

          <a class="mdl-navigation__link client_call" href="#" data-type="info">Information</a>
          <a class="mdl-navigation__link client_call" href="#" data-type="sync">Sync</a>

          <div class="ikascrew-drawer-separator">Directory</div>
          <a class="mdl-navigation__link" href="">Server</a>
        </nav>
      </div>

      <div class="ikascrew-content mdl-layout__content">

{{range .}}
<div class="ikascrew-card-wide mdl-card mdl-shadow--2dp">

    <div class="mdl-card__title" style="background: url('{{.Image}}') center / cover;"> 
        <h2 class="mdl-card__title-text">{{.Name}}</h2>
  </div>

  <div class="mdl-card__supporting-text">

      <button id="{{.Name}}-remote-switch" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect remote_call" data-type="remote" data-name="" data-cmd="switch">
          <i class="material-icons right-section"> autorenew</i>
      </button>

      <button id="{{.Name}}-remote-effect" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect remote_call" data-type="remote" data-name="{{.Name}}" data-cmd="effect">
          <i class="material-icons right-section"> tab_unselected</i>
      </button>

  </div>

  <div class="mdl-card__menu">

      <button id="{{.Name}}-load" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect name_call" data-type="load" data-name="{{.Name}}">
      <i class="material-icons">backup</i>
    </button>

    <button id="{{.Name}}-push" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect name_call" data-type="push" data-name="{{.Name}}">
      <i class="material-icons">settings_backup_restore</i>
    </button>

    <button id="{{.Name}}-switch" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect name_call" data-type="switch" data-name="{{.Name}}">
      <i class="material-icons">autorenew</i>
    </button>

    <button id="{{.Name}}-effect" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect name_call" data-type="effect" data-name="{{.Name}}">
      <i class="material-icons">tab_unselected</i>
    </button>

    <div class="mdl-tooltip mdl-tooltip--large" for="{{.Name}}-remote-switch">Switch</div>
    <div class="mdl-tooltip mdl-tooltip--large" for="{{.Name}}-remote-effect">Effect</div>

    <div class="mdl-tooltip mdl-tooltip--large" for="{{.Name}}-load">Load</div>
    <div class="mdl-tooltip mdl-tooltip--large" for="{{.Name}}-push">Push</div>
    <div class="mdl-tooltip mdl-tooltip--large" for="{{.Name}}-switch">Switch</div>
    <div class="mdl-tooltip mdl-tooltip--large" for="{{.Name}}-effect">Effect</div>

  </div>
</div>
<br/>
{{end}}

      </div>

    </div>

    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <script type="text/javascript" src="jquery-3.1.1.min.js"></script>

    <script>
$(".name_call").click(function() {
    var cmd = $(this).attr("data-type");
    var name = $(this).attr("data-name");
    var data = {};
    data.name = name;

    ajaxCommand(cmd,data);
});

$(".client_call").click(function() {
    var cmd = $(this).attr("data-type");
    ajaxCommand(cmd);
});

$(".remote_call").click(function() {
    var cmd = $(this).attr("data-type");
    var rm = $(this).attr("data-cmd");
    var name = $(this).attr("data-name");
    var data = {};
    data.name = name;
    data.cmd = rm;

    ajaxCommand(cmd,data);
});

function ajaxCommand(command,data) {
   console.log(command);
   console.log(data);

   $.ajax({
       type: "POST",
       url: command,
       data: data,
       success: function(data) {
           console.log("success");
           console.log(data);
       } ,
       error: function(data) {
           console.log("error");
           console.log(data);
       }
   });
}

    </script>
  </body>
</html>
